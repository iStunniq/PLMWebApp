@model Region

@{
    ViewData["Title"] = "Region";
}

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <input asp-for="Id" hidden />

    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-4 row">
                <div class="col-12 pb-2">
                    <h2 class="text-primary">@(Model.Id != 0? "Update" : "Create") Region</h2>
                </div>
                <div class="mb-3">
                    @*<div asp-validation-summary="All"></div>*@
                    <label asp-for="Name"></label>
                    <br />
                    <input asp-for="Name" type="text" class="form-control" placeholder="Region Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-12">
                    @if (Model.Id != 0)
                    {
                        <button type="submit" class="btn btn-primary" style="width: 150px">Update</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary" style="width: 150px">Create</button>
                    }
                    <a asp-controller="Region" asp-action="Index" class="btn btn-secondary" style="width: 150px">Back To List</a>
                </div>
            </div>
        </div>
    </div>


</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}