@model Category

@{
    ViewData["Title"] = "Create Category";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
        </div>
        <div class="mb-3">
            @*<div asp-validation-summary="All"></div>*@
            <label asp-for="Name"></label>
            <br /> 
            <input asp-for="Name" type="text" class="form-control" id="floatingInput" placeholder="Category Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <br /> 
            <input asp-for="DisplayOrder" type="text" class="form-control" id="floatingInput" placeholder="Display Order">
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width: 150px">Create</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width: 150px">Back To List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
