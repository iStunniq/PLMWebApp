@model IEnumerable<Brand>

@{
    ViewData["Title"] = "Brand Index";
}

<div class="container p-3">

    <div class="row pt-4"> 
        <div class="col-6">
            <h2 class="text-primary">Brand List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Brand" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Brand
            </a>
        </div>
    </div>

    <br /> 

    <table class="table table-hover" style="width: 100%" >
        <thead>
            <tr>
                <th>
                    Brand Name
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width=50%>
                        @obj.Name
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Brand" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-info"> 
                                <i class="bi bi-pencil-square"> </i> Edit 
                            </a>
                        </div>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Brand" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger"> 
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>