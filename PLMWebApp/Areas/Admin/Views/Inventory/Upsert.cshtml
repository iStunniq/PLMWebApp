@model PLM.Models.ViewModels.InventoryVM

@{
    ViewData["Title"] = "Batch";
}

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <input asp-for="Product.Id" hidden>
    <input asp-for="Product.Name" hidden>
    <input asp-for="Product.ImageUrl" hidden>
    <input asp-for="Batch.Id" hidden>
    <input asp-for="Batch.ProductId" value="@Model.Product.Id" hidden>
    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-4 row">
                <div class="col-12 pb-2">
                    <h2 class="text-primary">@(Model.Batch.Id != 0? "Update" : "Create") Batch for @Model.Product.Name</h2>
                </div>
                <div class="mb-3">
                    @*<div asp-validation-summary="All"></div>*@
                    <label asp-for="Batch.Expiry"></label>
                    <br />
                    <input asp-for="Batch.Expiry" type="datetime-local" class="form-control" placeholder="@DateTime.Now">
                    <span asp-validation-for="Batch.Expiry" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    @*<div asp-validation-summary="All"></div>*@
                    <label asp-for="Batch.BasePrice"></label>
                    <br />
                    <input asp-for="Batch.BasePrice" type="text" class="form-control" id="floatingInput" placeholder="Product Price">
                    <span asp-validation-for="Batch.BasePrice" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    @*<div asp-validation-summary="All"></div>*@
                    <label asp-for="Batch.Stock"></label>
                    <br />
                    <input asp-for="Batch.Stock" type="text" class="form-control" id="floatingInput" placeholder="Product Price">
                    <span asp-validation-for="Batch.Stock" class="text-danger"></span>
                </div>
                <div class="col-12">
                    @if (Model.Batch.Id != 0)
                    {
                        <button type="submit" class="btn btn-primary" style="width: 150px">Update</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary" style="width: 150px">Add New Batch</button>
                    }
                    <a asp-controller="Inventory" asp-action="Batches" asp-route-id="@Model.Product.Id" class="btn btn-secondary" style="width: 150px">Back To List</a>
                </div>
            </div>
        </div>
        <div class="col-2 pt-4">
            <img src="@Model.Product.ImageUrl" width="100%" style="border-radius:5px; border: 1px solid #bbb9b9"/>
        </div>
    </div>


</form>

