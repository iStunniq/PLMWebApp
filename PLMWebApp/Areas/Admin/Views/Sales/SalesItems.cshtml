@model PLM.Models.SalesReport

@{
    ViewData["Title"] = "Reservations Report " + @Model.Name;
}

<div class="container p-3">
    <input asp-for="Name" hidden/>
    <div class="row pt-4"> 
        <div class="col-6">
            <h2 class="text-primary">Reservations for Sales Report @Model.Name</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Sales" asp-action="Index" class="btn btn-primary">
                Return
            </a>
        </div>
    </div>

    <br /> 

    <table id="tblData" class="table table-hover" style="width: 100%" > 
        <thead>
            <tr>
                <th>
                    Shipped Date
                </th>
                <th>
                    ID
                </th>
                <th>
                    Email
                </th>
                <th>
                    Phone #
                </th>
                <th>
                    Total
                </th>
                <th>
                    Expense
                </th>
                <th>
                    Net
                </th>
                <th></th>
            </tr>
        </thead>
    </table>

</div>


@section Scripts{
    <script> var reportId = @Model.Id</script>
    <script src="~/js/salesitems.js"></script>
}