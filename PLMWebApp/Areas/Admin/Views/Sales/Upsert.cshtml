        function ValidateInput(){
            if (document.getElementById("min").value => document.getElementById("max").value) 
            {
                Swal.fire
                    ({
                        icon: 'error',
                        title: 'Oops...',
                        text: '"From:" value needs to be earlier than the "To:" value'
                    });
                return false;
            }
            return true;
        }
    </script>
}