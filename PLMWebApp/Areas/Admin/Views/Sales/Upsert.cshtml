@model PLM.Models.SalesReport

@{
    ViewData["Title"] = "Product";
}

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <input hidden asp-for="Id"/>
    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-4 row">
                <div class="col-12 pb-2">
                    <h2 class="text-primary">@(Model.Id != 0? "Update" : "Generate New") Sales Report</h2>
                </div>
                <div class="mb-3">
                    @*<div asp-validation-summary="All"></div>*@
                    <label asp-for="Name"></label>
                    <br />
                    <input asp-for="Name" type="text" class="form-control" id="floatingInput" placeholder="Sales Report Label">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3 col-6">
                    @*<div asp-validation-summary="All"></div>*@
                    <label asp-for="MinDate"></label>
                    <br />
                    <input type="datetime-local" asp-for="MinDate" class="form-select" id="min">
                    <span asp-validation-for="MinDate" class="text-danger"></span>
                </div>
                <div class="mb-3 col-6">
                    @*<div asp-validation-summary="All"></div>*@
                      <label asp-for="MaxDate"></label>
                    <br />
                    <input type="datetime-local" asp-for="MaxDate" class="form-select" id="max">
                    <span asp-validation-for="MaxDate" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    @*<div asp-validation-summary="All"></div>*@
                    <label asp-for="Overhead"></label>
                    <br />
                    <input asp-for="Overhead" type="text" class="form-control" id="floatingInput" placeholder="Product Name">
                    <span asp-validation-for="Overhead" class="text-danger"></span>
                </div>
                @if (Model.Id != 0)
                    {
                <div class="mb-3">
                    @*<div asp-validation-summary="All"></div>*@
                    <label asp-for="BaseCosts"></label>
                    <br />
                    <input asp-for="BaseCosts" type="text" class="form-control" id="floatingInput" placeholder="To Be Generated" disabled>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    @*<div asp-validation-summary="All"></div>*@
                    <label asp-for="GrossIncome"></label>
                    <br />
                    <input asp-for="GrossIncome" type="text" class="form-control" id="floatingInput" placeholder="To Be Generated" disabled>
                    <span asp-validation-for="GrossIncome" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    @*<div asp-validation-summary="All"></div>*@
                    <label asp-for="NetIncome"></label>
                    <br />
                    <input asp-for="NetIncome" type="text" class="form-control" id="floatingInput" placeholder="To Be Generated" disabled>
                    <span asp-validation-for="NetIncome" class="text-danger"></span>
                </div>
                }
                <div class="col-12">
                    @if (Model.Id != 0)
                    {
                        <button type="submit" class="btn btn-primary" style="width: 150px">Update</button>
                    }
                    else
                    {
                        <button type="submit" onclick="return ValidateInput()" class="btn btn-primary" style="width: 150px">Generate</button>
                    }
                    <a asp-controller="Sales" asp-action="Index" class="btn btn-secondary" style="width: 150px">Back To List</a>
                </div>
            </div>
        </div>
    </div>


</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
    <script>
